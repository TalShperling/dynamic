{
  "name": "bluetorch-dynamic",
  "version": "1.0.0",
  "description": "GraphQL Apollo-Server-Express Typescript seed",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "start": "concurrently -k -n \"Server,GQL-Codegen\" -c \"blue,magenta\" \"nodemon src/server.ts\" \"npm run generate\"",
    "generate": "graphql-codegen --config codegen.yml",
    "lint": "npx eslint --fix ./src/**",
    "start:prod": "node dist/server.js",
    "debug": "tsc && node --inspect-brk dist/server"
  },
  "keywords": [
    "apollo-server-express",
    "graphql",
    "typescript"
  ],
  "author": "Tal Shperling & Avi Levi & Itamar Goldshlager",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "2.2.1",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/typescript": "2.2.4",
    "@graphql-codegen/typescript-resolvers": "2.3.2",
    "@types/axios": "0.14.0",
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/graphql": "14.5.0",
    "@types/jest": "27.0.2",
    "@types/lodash": "4.14.175",
    "@types/node": "14.17.27",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "concurrently": "6.3.0",
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "jest": "27.3.1",
    "jest-html-reporter": "3.4.1",
    "jsdoc": "3.6.7",
    "nodemon": "2.0.13",
    "prettier": "2.4.1",
    "ts-jest": "27.0.7",
    "ts-node": "10.3.0",
    "typescript": "4.4.4",
    "wait-on": "6.0.0"
  },
  "dependencies": {
    "apollo-link-http": "^1.5.17",
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^3.0.0",
    "axios": "^0.23.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-fetch": "^3.0.6",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "lodash": "^4.17.20",
    "merge-graphql-schemas": "^1.7.8",
    "winston": "^3.3.3",
    "winston3-logstash-udp": "0.0.7"
  }
}
